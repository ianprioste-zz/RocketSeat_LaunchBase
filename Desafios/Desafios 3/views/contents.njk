{% extends "layout.njk" %}

{% block head%}

    <title>Landies - Contents</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

{% endblock%}
 


{% block content%}

    <section class="cards">

        {% for item in items %}
            <div class="card" id="{{item.id}}">
                <div class="card_img">
                    <img src="https://img.youtube.com/vi/{{item.id}}/0.jpg" alt="">
                </div>
                <div class="card_content">
                    <p>{{item.title}}</p>
                </div>
                <div class="card_info">
                    <p>{{item.channel}}</p>
                    <p class="card_time">{{item.time}}</p>
                </div>   
            </div>
        {%endfor%}
    </section>

    <div class="modal-overlay">
        <div class="modal">
            <a class="close-modal">  <i class="material-icons">close</i> </a>
            <div class="modal-content">
                <iframe src="" frameborder="0"></iframe>
            </div>
        </div>
    </div>

    <script src="scripts.js"></script>
      
{% endblock%}